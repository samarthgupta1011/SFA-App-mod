<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="30sp"
    app:cardCornerRadius="10sp"
    android:layout_marginTop="20sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="5sp"
            android:background="@color/black" />


        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NOTICE TITLE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="5sp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_notice_resp_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:gravity="start"
            android:text="13th Nov, 2017"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tv_notice_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Sample text Sample text Sample text Sample text Sample text Sample text Sample text Sample text Sample text Sample "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice By: " />

            <TextView
                android:id="@+id/tv_notice_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9090909090" />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>